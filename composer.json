{
    "name": "opendialogai/opendialog",
    "type": "project",
    "description": "OpenDialog Demonstration App",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.3.0",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.2",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0",
        "opendialogai/core": "dev-develop",
        "opendialogai/webchat": "0.7.0",
        "phalcongelist/php-diff": "^2.0",
        "predis/predis": "^1.1",
        "propaganistas/laravel-phone": "^4.2",
        "spatie/commonmark-highlighter": "^2.0",
        "spatie/laravel-cors": "^1.6",
        "spatie/laravel-flash": "1.3",
        "srmklive/authy": "^0.6"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.3",
        "filp/whoops": "^2.5",
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "^1.8",
        "mockery/mockery": "^1.2",
        "nunomaduro/collision": "^2.1",
        "phpro/grumphp": "^0.16.0",
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=scripts --force",
            "@php artisan vendor:publish --tag=dgraph --force"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=scripts --force",
            "@php artisan vendor:publish --tag=dgraph --force"
        ]
    }
}
